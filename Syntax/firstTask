function calculate (str , num , dec){
    let fruitType = str;
    let fruitWeight = num;
    let pricePerKilo = dec;

    let fruitWeightKilo = fruitWeight / 1000;
    let price = fruitWeightKilo * pricePerKilo;

    console.log(`I need $${price.toFixed(2)} to buy ${fruitWeightKilo.toFixed(2)} kilograms ${fruitType}.`);
}

calculate('orange', 2500, 1.80);
